---
import LunettesSVG from '../../assets/lunettes.svg';

interface Props {
  id: string;
}

const { id } = Astro.props;
---

<div id={id} class="modal-cart fixed inset-0 z-50 hidden items-center justify-center px-4" style="background-color: rgba(0, 0, 0, 0.3);">
  <div class="modal-cart-content bg-white rounded-xl sm:rounded-2xl shadow-2xl max-w-2xl w-full relative animate-slide-up">
    <!-- Bouton fermer -->
    <button class="modal-close absolute top-4 right-4 w-8 h-8 rounded-full hover:bg-gray-100 transition-all duration-200 flex items-center justify-center z-10" data-modal={id}>
      <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-gris" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>

    <!-- Contenu -->
    <div class="p-6 sm:p-8">
      <!-- Titre -->
      <div class="mb-6">
        <h2 class="text-xl sm:text-2xl font-bold text-noir mb-1">Configuration personnalisée</h2>
        <p class="text-sm text-gris" id="cart-config-name">ÉLÉGANCE</p>
      </div>

      <!-- Contenu principal : Prévisualisation + Configuration -->
      <div class="flex flex-col sm:flex-row gap-6 mb-6">
        <!-- Prévisualisation des lunettes -->
        <div class="w-full sm:w-2/5">
          <div class="bg-gray-50 rounded-lg p-4 pt-8 flex items-center justify-center" style="height: 180px;" id="modal-preview-container">
            <!-- Le SVG coloré sera injecté ici par JavaScript -->
          </div>
        </div>

        <!-- Résumé de la configuration -->
        <div class="w-full sm:w-3/5">
          <div class="space-y-3">
            <!-- Prix -->
            <div class="flex items-center justify-between pb-3 border-b border-gray-200">
              <span class="text-sm text-gris">Prix total</span>
              <span class="text-2xl font-bold text-vert" id="cart-prix">149€</span>
            </div>
            
            <!-- Détails -->
            <div class="grid grid-cols-2 gap-3 text-sm">
              <div>
                <p class="text-gris text-xs mb-1">Taille</p>
                <p class="font-medium text-noir" id="cart-size">52-18</p>
              </div>
              <div>
                <p class="text-gris text-xs mb-1">Type de verres</p>
                <p class="font-medium text-noir" id="cart-type-verres">Classique</p>
              </div>
              <div>
                <p class="text-gris text-xs mb-1">Forme</p>
                <p class="font-medium text-noir" id="cart-forme">Rectangulaire</p>
              </div>
              <div>
                <p class="text-gris text-xs mb-1">Épaisseur</p>
                <p class="font-medium text-noir" id="cart-epaisseur">Moyenne</p>
              </div>
              <div class="col-span-2">
                <p class="text-gris text-xs mb-1">Matériau</p>
                <p class="font-medium text-noir" id="cart-materiau">Acétate de cellulose</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Boutons d'action -->
      <div class="flex flex-col sm:flex-row gap-3">
        <button 
          id="save-only-btn"
          class="flex-1 bg-white border-2 border-gris text-gris rounded-full px-4 sm:px-6 py-3 font-semibold text-sm hover:bg-gray-50 transition-all duration-200 flex items-center justify-center gap-2"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3 3m0 0l-3-3m3 3V4" />
          </svg>
          Sauvegarder uniquement
        </button>
        <button 
          id="save-and-cart-btn"
          class="flex-1 bg-vert text-white rounded-full px-4 sm:px-6 py-3 font-semibold text-sm hover:bg-[#4a7d5f] transition-all duration-200 flex items-center justify-center gap-2"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
          </svg>
          Ajouter au panier
        </button>
      </div>
    </div>
  </div>
</div>

<style>
  .modal-cart {
    animation: fadeIn 0.3s ease-out;
  }

  .modal-cart.hidden {
    display: none;
  }

  .modal-cart:not(.hidden) {
    display: flex;
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes slide-up {
    from {
      transform: translateY(30px);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  @keyframes bounce-slow {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  @keyframes check {
    0% {
      stroke-dasharray: 0, 100;
    }
    100% {
      stroke-dasharray: 100, 0;
    }
  }

  .animate-slide-up {
    animation: slide-up 0.4s ease-out;
  }

  .animate-bounce-slow {
    animation: bounce-slow 2s infinite;
  }

  .animate-check {
    stroke-dasharray: 100;
    animation: check 0.6s ease-out 0.2s forwards;
  }
</style>

