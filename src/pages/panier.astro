import Layout from '../layouts/Layout.astro';
import Header from '../components/layouts/Header.astro';
import { pb, getLunettesParUtilisateur } from '../utils/pb';

// R√©cup√©rer les configurations dans le panier (avec cookie)
let user = null;
let panierConfigurations: any[] = [];
let total = 0;
let nombreArticles = 0;

const authCookie = Astro.cookies.get('pb_auth');

if (authCookie?.value) {
  try {
    const cookieData = JSON.parse(authCookie.value);
    pb.authStore.save(cookieData.token, cookieData.model);
    
    user = pb.authStore.model;
    if (user?.id) {
      // R√©cup√©rer les lunettes du panier via la VUE lunettes_par_utilisateur
      const resultLunettes = await getLunettesParUtilisateur(user.id, true); // true = dans le panier
      
      if (!resultLunettes.success) {
        console.error('‚ùå Erreur r√©cup√©ration panier:', resultLunettes.error);
      }
      
      const records = resultLunettes.lunettes;
      console.log(`üìä Nombre de configs trouv√©es (via vue): ${records.length}`);

      // R√©cup√©rer les stats du panier depuis les vues PocketBase
      try {
        const statsFilter = `user_id = "${user.id}"`;
        
        // R√©cup√©rer le montant total
        try {
          const montantStats = await pb.collection("montant_panier_par_utilisateur").getFirstListItem(statsFilter);
          total = montantStats?.montant_total || 0;
          console.log(`üí∞ Montant total depuis vue: ${total}‚Ç¨`);
        } catch (error) {
          console.log('‚ö†Ô∏è Vue montant_panier non accessible, calcul manuel');
          // Fallback: calculer manuellement
          total = records.reduce((sum: number, record: any) => sum + (record.prix || 0), 0);
        }
        
        // R√©cup√©rer le nombre d'articles
        try {
          const nombreStats = await pb.collection("nombre_lunettes_panier").getFirstListItem(statsFilter);
          nombreArticles = nombreStats?.nombre_lunettes || 0;
          console.log(`üî¢ Nombre d'articles depuis vue: ${nombreArticles}`);
        } catch (error) {
          console.log('‚ö†Ô∏è Vue nombre_lunettes_panier non accessible, calcul manuel');
          // Fallback: utiliser la longueur du tableau
          nombreArticles = records.length;
        }
      } catch (error) {
        console.error('‚ùå Erreur stats panier:', error);
        // Fallback complet
        total = records.reduce((sum: number, record: any) => sum + (record.prix || 0), 0);
        nombreArticles = records.length;
      }

      console.log(`üì¶ R√©sultat final: ${nombreArticles} articles, ${total}‚Ç¨`);

      // Transformer les donn√©es pour l'affichage
      panierConfigurations = records.map((config: any) => {
        const materiauNom = config.expand?.materiau_id?.libelle || 'Ac√©tate de cellulose';
        
        return {
          id: config.id,
          nom: config.nom || 'SANS NOM',
          description: config.description || '',
          prix: config.prix || 149,
          taille: config.taille || '52-18',
          types_verres: config.types_verres || 'correcteurs',
          forme_monture: config.forme_monture || 'rectangulaire',
          epaisseur_monture: config.epaisseur_monture || 'moyen',
          couleur_monture: config.couleur_monture,
          couleur_branches: config.couleur_branches,
          couleur_verres: config.couleur_verres,
          materiauNom: materiauNom,
          created: config.created
        };
      });
    }
  } catch (error) {
    console.error('Erreur r√©cup√©ration panier:', error);
  }
}

const configurations = panierConfigurations;

// Formater la date
function formatDate(dateString: string) {
  const date = new Date(dateString);
  return date.toLocaleDateString('fr-FR', { 
    day: '2-digit', 
    month: '2-digit', 
    year: 'numeric' 
  });
}

// Capitaliser la premi√®re lettre
function capitalize(str: string) {
  return str.charAt(0).toUpperCase() + str.slice(1).toLowerCase();
}
