    // Fonction pour colorier les SVG
    function colorierSVG(container: HTMLElement, couleurs: { monture: string, branches: string, verres: string }) {
      container.innerHTML = svgContent;
      const svg = container.querySelector('svg');
      if (!svg) return;

      // Appliquer les couleurs des verres
      const verresGroup = svg.querySelector('#verres');
      if (verresGroup) {
        const verresPaths = verresGroup.querySelectorAll('path');
        verresPaths.forEach(path => {
          (path as SVGPathElement).style.fill = couleurs.verres;
          (path as SVGPathElement).style.opacity = '0.5';
        });
      }

      // Appliquer la couleur de la monture
      const montureGroup = svg.querySelector('#monture');
      if (montureGroup) {
        const monturePaths = montureGroup.querySelectorAll('path.cls-4');
        monturePaths.forEach(path => {
          (path as SVGPathElement).style.fill = couleurs.monture;
          (path as SVGPathElement).style.stroke = couleurs.monture;
        });
      }

      // Appliquer la couleur des branches
      const branchesGroup = svg.querySelector('#branches');
      if (branchesGroup) {
        const branchesPaths = branchesGroup.querySelectorAll('path.cls-4');
        branchesPaths.forEach(path => {
          (path as SVGPathElement).style.fill = couleurs.branches;
          (path as SVGPathElement).style.stroke = couleurs.branches;
        });
      }
    }

    // Colorier tous les SVG
    const svgContainers = document.querySelectorAll('[data-config-couleurs]');
    svgContainers.forEach(container => {
      const couleurs = JSON.parse(container.getAttribute('data-config-couleurs') || '{}');
      colorierSVG(container as HTMLElement, couleurs);
    });

    // Fonction pour afficher une notification
    function showNotification(message: string, type: 'success' | 'error' = 'success') {
      const notification = document.getElementById('notification');
      const notificationMessage = document.getElementById('notification-message');
      
      if (notification && notificationMessage) {
        notificationMessage.textContent = message;
        notification.style.transform = 'translateX(0)';
        
        if (type === 'error') {
          notification.style.backgroundColor = '#ef4444';
        } else {
          notification.style.backgroundColor = '#5c8d6f';
        }
        
        setTimeout(() => {
          notification.style.transform = 'translateX(400px)';
        }, 3000);
      }
    }

    // G√©rer le retrait du panier
    const removeButtons = document.querySelectorAll('.remove-from-cart');
    removeButtons.forEach(button => {
      button.addEventListener('click', async () => {
        const configId = button.getAttribute('data-id');
        if (!configId) return;

        try {
          // Mettre √† jour la configuration (retirer du panier)
          await pb.collection('configuration_lunettes').update(configId, {
            est_dans_panier: false
          });

          showNotification('Article retir√© du panier', 'success');
          
          // Recharger la page apr√®s un court d√©lai
          setTimeout(() => {
            window.location.reload();
          }, 1000);
        } catch (error) {
          console.error('Erreur:', error);
          showNotification('Erreur lors du retrait', 'error');
        }
      });
    });
  });
</script>
