  // Fonction pour colorier un SVG
  function colorierSVG(container: HTMLElement, couleurs: { monture: string, branches: string, verres: string }) {
    const svgContainer = container.querySelector('.lunettes-svg-container');
    if (!svgContainer) return;
    
    svgContainer.innerHTML = svgContent;
    const svg = svgContainer.querySelector('svg');
    if (!svg) return;
    
    // Appliquer les couleurs des verres
    const verresGroup = svg.querySelector('#verres');
    if (verresGroup) {
      const verresPaths = verresGroup.querySelectorAll('path');
      verresPaths.forEach(path => {
        (path as SVGPathElement).style.fill = couleurs.verres;
        (path as SVGPathElement).style.opacity = '0.5';
      });
    }

    // Appliquer la couleur de la monture
    const montureGroup = svg.querySelector('#monture');
    if (montureGroup) {
      const monturePaths = montureGroup.querySelectorAll('path.cls-4');
      monturePaths.forEach(path => {
        (path as SVGPathElement).style.fill = couleurs.monture;
        (path as SVGPathElement).style.stroke = couleurs.monture;
      });
    }

    // Appliquer la couleur des branches
    const branchesGroup = svg.querySelector('#branches');
    if (branchesGroup) {
      const branchesPaths = branchesGroup.querySelectorAll('path.cls-4');
      branchesPaths.forEach(path => {
        (path as SVGPathElement).style.fill = couleurs.branches;
        (path as SVGPathElement).style.stroke = couleurs.branches;
      });
    }
  }

  // Fonction pour afficher une notification
  function showNotification(message: string, type: 'success' | 'error') {
    const notification = document.createElement('div');
    notification.className = `fixed top-8 right-8 z-50 px-6 py-4 rounded-lg shadow-lg transform transition-all duration-300 ${
      type === 'success' 
        ? 'bg-vert text-white' 
        : 'bg-red-500 text-white'
    }`;
    notification.textContent = message;
    notification.style.transform = 'translateX(400px)';
    
    document.body.appendChild(notification);
    
    setTimeout(() => {
      notification.style.transform = 'translateX(0)';
    }, 10);
    
    setTimeout(() => {
      notification.style.transform = 'translateX(400px)';
      setTimeout(() => {
        document.body.removeChild(notification);
      }, 300);
    }, 3000);
  }

  // Gestion de la suppression
  document.addEventListener('DOMContentLoaded', () => {
    // Colorier tous les SVG des configurations
    const cartes = document.querySelectorAll('[data-config-couleurs]');
    cartes.forEach((carte) => {
      const couleurs = JSON.parse(carte.getAttribute('data-config-couleurs') || '{}');
      colorierSVG(carte as HTMLElement, couleurs);
    });

    const deleteButtons = document.querySelectorAll('.delete-config-btn');
    
    deleteButtons.forEach(button => {
      button.addEventListener('click', async (e) => {
        const btn = e.currentTarget as HTMLElement;
        const configId = btn.getAttribute('data-config-id');
        const configName = btn.getAttribute('data-config-name');
        
        if (!configId) return;
        
        if (confirm(`√ätes-vous s√ªr de vouloir supprimer la configuration "${configName}" ?`)) {
          const result = await deleteConfiguration(configId);
          
          if (result.success) {
            showNotification('Configuration supprim√©e avec succ√®s', 'success');
            // Recharger la page apr√®s 1 seconde
            setTimeout(() => {
              window.location.reload();
            }, 1000);
          } else {
            showNotification('Erreur lors de la suppression: ' + result.error, 'error');
          }
        }
      });
    });

    // Gestion de l'ajout au panier
    const addToCartButtons = document.querySelectorAll('.add-to-cart-btn');
    
    addToCartButtons.forEach(button => {
      button.addEventListener('click', async (e) => {
        const btn = e.currentTarget as HTMLElement;
        const configId = btn.getAttribute('data-config-id');
        
        if (!configId) return;
        
        // D√©sactiver le bouton pendant le traitement
        btn.style.opacity = '0.5';
        btn.style.pointerEvents = 'none';
        
        const result = await addToCart(configId);
        
        if (result.success) {
          showNotification('Ajout√© au panier !', 'success');
          // Optionnel : rediriger vers le panier
          // setTimeout(() => window.location.href = '/panier', 1000);
        } else {
          showNotification('Erreur: ' + result.error, 'error');
          btn.style.opacity = '1';
          btn.style.pointerEvents = 'auto';
        }
      });
    });
  });
</script>
