      )}
    </main>
  </div>

  <!-- Modal de confirmation pour suppression -->
  <ModalConfirm 
    id="delete-config-confirm" 
    title="Supprimer cette configuration ?"
    message="Cette action est irr√©versible. Voulez-vous vraiment supprimer cette configuration ?"
  />
</Layout>

<style>
  /* Animation au survol des cartes */
  .group:hover {
    transform: translateY(-4px);
  }
</style>

<!-- Le script de coloration SVG est maintenant g√©r√© par le composant LunettesSVGRenderer.astro -->
<script>
  import { deleteConfiguration, addToCart } from '../utils/pb';

  // Fonction pour afficher une notification
  function showNotification(message: string, type: 'success' | 'error') {
    const notification = document.createElement('div');
    notification.className = `fixed top-8 right-8 z-50 px-6 py-4 rounded-lg shadow-lg transform transition-all duration-300 ${
      type === 'success' 
        ? 'bg-vert text-white' 
        : 'bg-red-500 text-white'
    }`;
    notification.textContent = message;
    notification.style.transform = 'translateX(400px)';
    
    document.body.appendChild(notification);
    
    setTimeout(() => {
      notification.style.transform = 'translateX(0)';
    }, 10);
    
    setTimeout(() => {
      notification.style.transform = 'translateX(400px)';
      setTimeout(() => {
        document.body.removeChild(notification);
      }, 300);
    }, 3000);
  }

  // Gestion de la suppression et ajout au panier
  document.addEventListener('DOMContentLoaded', () => {
    const deleteButtons = document.querySelectorAll('.delete-config-btn');
    
    deleteButtons.forEach(button => {
      button.addEventListener('click', async (e) => {
        const btn = e.currentTarget as HTMLElement;
        const configId = btn.getAttribute('data-config-id');
        const configName = btn.getAttribute('data-config-name');
        
        if (!configId) return;
        
        // Ouvrir le modal de confirmation
        const modal = document.getElementById('delete-config-confirm');
        if (!modal) return;
        
        // Mettre √† jour le message avec le nom de la config
        const messageEl = modal.querySelector('p');
        if (messageEl) {
          messageEl.textContent = `Voulez-vous vraiment supprimer la configuration "${configName}" ? Cette action est irr√©versible.`;
        }
        
        modal.classList.remove('hidden');
        document.body.style.overflow = 'hidden';
        
        // Attendre la r√©ponse
        const confirmed = await new Promise<boolean>((resolve) => {
          const confirmBtn = modal.querySelector('.modal-confirm-btn');
          const cancelBtn = modal.querySelector('.modal-cancel');
          const overlay = modal.querySelector('.modal-overlay');
          
          const close = (result: boolean) => {
            if (modal) {
              modal.classList.add('hidden');
              document.body.style.overflow = 'auto';
            }
            confirmBtn?.removeEventListener('click', handleConfirm);
            cancelBtn?.removeEventListener('click', handleCancel);
            overlay?.removeEventListener('click', handleOverlay);
            document.removeEventListener('keydown', handleEscape);
            resolve(result);
          };
          
          const handleConfirm = () => close(true);
          const handleCancel = () => close(false);
          const handleOverlay = (e: Event) => {
            if (e.target === overlay) close(false);
          };
          const handleEscape = (e: KeyboardEvent) => {
            if (e.key === 'Escape') close(false);
          };
          
          confirmBtn?.addEventListener('click', handleConfirm);
          cancelBtn?.addEventListener('click', handleCancel);
          overlay?.addEventListener('click', handleOverlay);
          document.addEventListener('keydown', handleEscape);
        });
        
        if (confirmed) {
          const result = await deleteConfiguration(configId);
          
          if (result.success) {
            showNotification('Configuration supprim√©e avec succ√®s', 'success');
            // Recharger la page apr√®s 1 seconde
            setTimeout(() => {
              window.location.reload();
            }, 1000);
          } else {
            showNotification('Erreur lors de la suppression: ' + result.error, 'error');
          }
        }
      });
    });

    // Gestion de l'ajout au panier
    const addToCartButtons = document.querySelectorAll('.add-to-cart-btn');
    
    addToCartButtons.forEach(button => {
      button.addEventListener('click', async (e) => {
        const btn = e.currentTarget as HTMLElement;
        const configId = btn.getAttribute('data-config-id');
        
        if (!configId) return;
        
        // D√©sactiver le bouton pendant le traitement
        btn.style.opacity = '0.5';
        btn.style.pointerEvents = 'none';
        
        const result = await addToCart(configId);
        
        if (result.success) {
          showNotification('Ajout√© au panier !', 'success');
          // Optionnel : rediriger vers le panier
          // setTimeout(() => window.location.href = '/panier', 1000);
        } else {
          showNotification('Erreur: ' + result.error, 'error');
          btn.style.opacity = '1';
          btn.style.pointerEvents = 'auto';
        }
      });
    });
  });
</script>
