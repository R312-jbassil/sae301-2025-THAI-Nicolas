---
import Layout from '../layouts/Layout.astro';
import Header from '../components/layouts/Header.astro';
import ModalConfirm from '../components/modals/ModalConfirm.astro';
import CardGalerie from '../components/ui/CardGalerie.astro';
import { pb, getNombreLunettesSauvegardes, getLunettesParUtilisateur } from '../utils/pb';

// R√©cup√©rer les configurations sauvegard√©es (pas dans le panier)
let savedConfigurations: any[] = [];
let nombreConfigurations = 0;

// R√©cup√©rer le cookie d'authentification PocketBase
const authCookie = Astro.cookies.get('pb_auth');

console.log('üîç Cookie pb_auth pr√©sent?', !!authCookie?.value);

if (authCookie?.value) {
  try {
    // Parser le cookie pour extraire le token et le model
    const cookieData = JSON.parse(authCookie.value);
    
    console.log('‚úÖ Cookie pars√©, user ID:', cookieData.model?.id);
    
    // Restaurer l'authentification dans pb.authStore
    pb.authStore.save(cookieData.token, cookieData.model);
    
    // R√©cup√©rer l'ID utilisateur
    const userId = cookieData.model?.id;
    
    if (userId) {
      console.log('üì¶ R√©cup√©ration des configurations pour user:', userId);
      
      // R√©cup√©rer les lunettes via la VUE lunettes_par_utilisateur
      const resultLunettes = await getLunettesParUtilisateur(userId, false); // false = hors panier
      
      if (resultLunettes.success) {
        const records = resultLunettes.lunettes;
        console.log('üéâ Configurations trouv√©es (via vue):', records.length);
        
        // R√©cup√©rer le nombre via la vue nombres_lunettes_sauvegardes
        const resultNombre = await getNombreLunettesSauvegardes(userId);
        if (resultNombre.success) {
          nombreConfigurations = resultNombre.nombre;
          console.log('üìä Nombre via vue:', nombreConfigurations);
        } else {
          // Fallback : utiliser le nombre de records
          nombreConfigurations = records.length;
          console.log('üìä Fallback - Nombre via records.length:', nombreConfigurations);
        }

        // Transformer les donn√©es pour l'affichage
        savedConfigurations = records.map((config: any) => {
          // Formater la date
          const date = new Date(config.created);
          const dateFormatted = date.toLocaleDateString('fr-FR', { 
            day: 'numeric', 
            month: 'short', 
            year: 'numeric' 
          });

          // Capitaliser la premi√®re lettre
          const capitalize = (str: string) => str.charAt(0).toUpperCase() + str.slice(1);

          return {
            id: config.id,
            name: config.nom || 'SANS NOM',
            date: dateFormatted,
            size: config.taille || '52-18',
            lensType: capitalize(config.types_verres || 'correcteurs'),
            frameShape: capitalize(config.forme_monture || 'rectangulaire'),
            material: 'Ac√©tate de cellulose', // TODO: expand materiau_id dans la vue
            price: config.prix || 149,
            // Donn√©es brutes pour modification
            rawData: config
          };
        });
      } else {
        console.error('‚ùå Erreur r√©cup√©ration lunettes:', resultLunettes.error);
      }
    }
  } catch (error) {
    console.error('Erreur r√©cup√©ration configurations:', error);
  }
}

const hasConfigurations = savedConfigurations.length > 0;
---

<Layout title="Ma Galerie - TaVue" description="Retrouvez toutes vos configurations de lunettes personnalis√©es">
  <Header />
  
  <!-- Contenu principal -->
  <div class="min-h-screen bg-neutral-100">
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 sm:py-12">
      <!-- Titre de page -->
      <div class="mb-8 sm:mb-10">
