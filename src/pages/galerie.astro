---
import Layout from '../layouts/Layout.astro';
import Header from '../components/layouts/Header.astro';
import LunettesSVG from '../assets/lunettes.svg';

// Données statiques pour les tests
// Mettre savedConfigurations = [] pour voir l'état vide
const savedConfigurations = [
  {
    id: 1,
    name: 'ÉLÉGANCE',
    date: '15 oct. 2025',
    size: '52-18',
    lensType: 'Classique',
    frameShape: 'Rectangulaire',
    price: 189,
    image: LunettesSVG.src
  },
  {
    id: 2,
    name: 'ÉLÉGANCE',
    date: '12 oct. 2025',
    size: '54-19',
    lensType: 'Polarisé',
    frameShape: 'Ronde',
    price: 229,
    image: LunettesSVG.src
  },
  {
    id: 3,
    name: 'ÉLÉGANCE',
    date: '8 oct. 2025',
    size: '48-16',
    lensType: 'Photochromique',
    frameShape: 'Carrée',
    price: 269,
    image: LunettesSVG.src
  }
];

const hasConfigurations = savedConfigurations.length > 0;
---

<Layout title="Ma Galerie - TaVue" description="Retrouvez toutes vos configurations de lunettes personnalisées">
  <Header />
  
  <!-- Contenu principal -->
  <div class="min-h-screen bg-neutral-100">
    <main class="max-w-7xl mx-auto px-8 py-12">
      <!-- Titre de page -->
      <div class="mb-10">
        <h1 class="text-4xl font-bold text-noir mb-3">Ma Galerie</h1>
        <p class="text-gris text-lg">Retrouvez toutes vos configurations sauvegardées</p>
      </div>

      {!hasConfigurations ? (
        <!-- État vide : Aucune configuration -->
        <div class="bg-white rounded-3xl border-2 border-vert-light p-16 text-center">
          <div class="max-w-md mx-auto">
            <!-- Icône -->
            <div class="w-24 h-24 bg-vert-light rounded-full mx-auto mb-6 flex items-center justify-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-12 h-12 text-vert" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
              </svg>
            </div>

            <h2 class="text-2xl font-bold text-noir mb-3">Aucune configuration sauvegardée</h2>
            <p class="text-gris mb-8 leading-relaxed">
              Vous n'avez pas encore créé de configuration personnalisée. 
              Commencez dès maintenant à concevoir la paire de lunettes parfaite pour vous.
            </p>

            <a href="/configurateur" class="inline-block">
              <button class="bg-vert text-white rounded-full px-8 py-4 text-sm font-bold hover:bg-[#4a7d5f] transition-all duration-300">
                CRÉER MA PREMIÈRE PAIRE
              </button>
            </a>
          </div>
        </div>
      ) : (
        <!-- État avec configurations -->
        <div>
          <!-- Actions en haut -->
          <div class="flex items-center justify-between mb-8">
            <p class="text-gris text-sm">
              <span class="font-semibold text-noir">{savedConfigurations.length}</span> configuration{savedConfigurations.length > 1 ? 's' : ''} sauvegardée{savedConfigurations.length > 1 ? 's' : ''}
            </p>
            <a href="/configurateur">
              <button class="bg-vert text-white rounded-full px-6 py-3 text-sm font-semibold hover:bg-[#4a7d5f] transition-all duration-300 flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
                NOUVELLE CONFIGURATION
              </button>
            </a>
          </div>

          <!-- Grille de configurations -->
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {savedConfigurations.map((config) => (
              <div class="bg-white rounded-2xl border-2 border-gray-200 hover:border-vert transition-all duration-300 overflow-hidden group relative">
                <!-- Image -->
                <div class="bg-vert-light p-8 flex items-center justify-center h-72 relative">
                  <img src={config.image} alt={config.name} class="w-full h-auto object-contain absolute inset-0 m-auto" style="max-height: 70%; width: auto;" />
                </div>

                <!-- Contenu -->
                <div class="p-6">
                  <div class="flex items-start justify-between mb-4">
                    <div>
                      <h3 class="text-xl font-bold text-noir mb-1">{config.name}</h3>
                      <p class="text-xs text-gris">Sauvegardé le {config.date}</p>
                    </div>
                    <p class="text-2xl font-bold text-vert">{config.price}€</p>
                  </div>

                  <!-- Détails -->
                  <div class="space-y-2 mb-5">
                    <div class="flex items-center justify-between text-sm">
                      <span class="text-gris">Taille</span>
                      <span class="font-semibold text-noir">{config.size}</span>
                    </div>
                    <div class="flex items-center justify-between text-sm">
                      <span class="text-gris">Type de verres</span>
                      <span class="font-semibold text-noir">{config.lensType}</span>
                    </div>
                    <div class="flex items-center justify-between text-sm">
                      <span class="text-gris">Forme</span>
                      <span class="font-semibold text-noir">{config.frameShape}</span>
                    </div>
                  </div>

                  <!-- Actions -->
                  <div class="flex gap-2">
                    <button class="flex-1 bg-white border-2 border-vert text-vert rounded-full px-4 py-3 text-sm font-semibold hover:bg-vert-light transition-all duration-300">
                      Modifier
                    </button>
                    <button class="flex-1 bg-vert text-white rounded-full px-4 py-3 text-sm font-semibold hover:bg-[#4a7d5f] transition-all duration-300 flex items-center justify-center gap-2">
                      <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                      </svg>
                      Panier
                    </button>
                  </div>
                </div>

                <!-- Bouton supprimer -->
                <button class="absolute top-4 right-4 w-8 h-8 bg-white rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center hover:bg-red-50">
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                  </svg>
                </button>
              </div>
            ))}
          </div>
        </div>
      )}
    </main>
  </div>
</Layout>

<style>
  /* Animation au survol des cartes */
  .group:hover {
    transform: translateY(-4px);
  }
</style>
