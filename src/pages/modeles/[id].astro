---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/layouts/Header.astro';
import { getModeleById, modeles } from '../../data/modeles';
import LunettesSVG from '../../assets/icones/lunettes.svg';

// Récupérer l'ID depuis l'URL
const { id } = Astro.params;

// Récupérer le modèle correspondant
const modele = getModeleById(id || '');

// Si le modèle n'existe pas, rediriger vers la page modèles
if (!modele) {
  return Astro.redirect('/modeles');
}

// Générer les chemins statiques pour le build
export async function getStaticPaths() {
  return modeles.map((modele) => ({
    params: { id: modele.id },
  }));
}

// Autres modèles suggérés (3 aléatoires)
const autresModeles = modeles
  .filter(m => m.id !== modele.id)
  .sort(() => 0.5 - Math.random())
  .slice(0, 3);
---

<Layout title={`${modele.nom} - TaVue`} description={modele.description}>
  <Header />
  
  <!-- Section principale -->
  <div class="bg-white">
    <main class="max-w-7xl mx-auto px-8 py-16">
      
      <!-- Fil d'Ariane -->
      <nav class="flex items-center gap-2 text-sm text-gris mb-8">
        <a href="/" class="hover:text-vert transition-colors">Accueil</a>
        <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
        <a href="/modeles" class="hover:text-vert transition-colors">Modèles</a>
        <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
        <span class="text-noir font-semibold">{modele.nom}</span>
      </nav>

      <!-- Contenu principal -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 mb-20">
        
        <!-- Colonne gauche - Image -->
        <div>
          <div class="sticky top-8">
            <!-- Badge -->
            {modele.bestseller && (
              <div class="inline-block bg-vert text-white px-6 py-3 rounded-full text-sm font-bold mb-6">
                BESTSELLER
              </div>
            )}
            {modele.nouveaute && (
              <div class="inline-block bg-noir text-white px-6 py-3 rounded-full text-sm font-bold mb-6">
                NOUVEAU
              </div>
            )}

            <!-- Image principale -->
            <div class="bg-vert-light rounded-3xl p-16 mb-6" id="main-image-container" data-modele-couleurs={JSON.stringify({
              monture: modele.couleurMonture,
              branches: modele.couleurBranches,
              verres: modele.couleurVerres
            })}>
              <div class="lunettes-svg-container w-full h-80">
                <!-- Le SVG sera injecté ici par JavaScript -->
              </div>
            </div>

            <!-- Miniatures de couleurs -->
            <div class="flex gap-3 justify-center">
              <button 
                class="w-16 h-16 rounded-xl border-2 border-vert overflow-hidden hover:scale-110 transition-transform"
                style={`background-color: ${modele.couleurMonture}`}
              >
                <span class="sr-only">Couleur monture</span>
              </button>
              <button 
                class="w-16 h-16 rounded-xl border-2 border-gray-200 overflow-hidden hover:scale-110 hover:border-vert transition-all"
                style={`background-color: ${modele.couleurBranches}`}
              >
                <span class="sr-only">Couleur branches</span>
              </button>
              <button 
                class="w-16 h-16 rounded-xl border-2 border-gray-200 overflow-hidden hover:scale-110 hover:border-vert transition-all"
                style={`background-color: ${modele.couleurVerres}; opacity: 0.6`}
              >
                <span class="sr-only">Couleur verres</span>
              </button>
            </div>
          </div>
        </div>

        <!-- Colonne droite - Informations -->
        <div>
          <h1 class="text-5xl font-bold text-noir mb-4">{modele.nom}</h1>
          <p class="text-2xl text-gris mb-8">{modele.description}</p>
          
          <!-- Prix -->
          <div class="bg-vert-light rounded-2xl p-6 mb-8">
            <div class="flex items-baseline gap-3">
              <span class="text-sm text-gris">À partir de</span>
              <span class="text-5xl font-bold text-vert">{modele.prix}€</span>
            </div>
            <p class="text-sm text-gris mt-2">Prix personnalisable selon vos options</p>
          </div>

          <!-- Description longue -->
          <div class="mb-8">
            <h2 class="text-2xl font-bold text-noir mb-4">Description</h2>
            <p class="text-gris leading-relaxed text-lg">
              {modele.descriptionLongue}
            </p>
          </div>

          <!-- Caractéristiques -->
          <div class="mb-8">
            <h2 class="text-2xl font-bold text-noir mb-4">Caractéristiques</h2>
            <ul class="space-y-3">
              {modele.caracteristiques.map((caracteristique) => (
                <li class="flex items-start gap-3">
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-vert flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-gris">{caracteristique}</span>
                </li>
              ))}
            </ul>
          </div>

          <!-- Spécifications techniques -->
          <div class="mb-8">
            <h2 class="text-2xl font-bold text-noir mb-4">Spécifications</h2>
            <div class="grid grid-cols-2 gap-4">
              <div class="bg-gray-50 rounded-xl p-4">
                <p class="text-xs text-gris mb-1">Forme</p>
                <p class="font-semibold text-noir capitalize">{modele.formeMonture}</p>
              </div>
              <div class="bg-gray-50 rounded-xl p-4">
                <p class="text-xs text-gris mb-1">Type de verres</p>
                <p class="font-semibold text-noir capitalize">{modele.typeVerres}</p>
              </div>
              <div class="bg-gray-50 rounded-xl p-4">
                <p class="text-xs text-gris mb-1">Taille</p>
                <p class="font-semibold text-noir">{modele.taille}</p>
              </div>
              <div class="bg-gray-50 rounded-xl p-4">
                <p class="text-xs text-gris mb-1">Épaisseur</p>
                <p class="font-semibold text-noir capitalize">{modele.epaisseur}</p>
              </div>
            </div>
          </div>

          <!-- Boutons d'action -->
          <div class="flex flex-col gap-4">
            <a 
              href={`/configurateur?modele=${modele.id}`}
              class="w-full bg-vert text-white rounded-full px-8 py-5 text-lg font-bold hover:bg-[#4a7d5f] transition-all duration-300 flex items-center justify-center gap-3 transform hover:scale-105"
            >
              <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
              </svg>
              <span>PERSONNALISER CE MODÈLE</span>
            </a>

            <a 
              href="/modeles"
              class="w-full bg-white border-2 border-vert text-vert rounded-full px-8 py-5 text-lg font-bold hover:bg-vert-light transition-all duration-300 flex items-center justify-center gap-3"
            >
              <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
              </svg>
              <span>VOIR TOUS LES MODÈLES</span>
            </a>
          </div>

          
        </div>
      </div>

      <!-- Section "Vous aimerez aussi" -->
      {autresModeles.length > 0 && (
        <section class="py-16 border-t border-gray-200">
          <h2 class="text-4xl font-bold text-noir mb-10 text-center">Vous aimerez aussi</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {autresModeles.map((autreModele) => (
              <a 
                href={`/modeles/${autreModele.id}`} 
                class="group"
                data-modele-couleurs={JSON.stringify({
                  monture: autreModele.couleurMonture,
                  branches: autreModele.couleurBranches,
                  verres: autreModele.couleurVerres
                })}
              >
                <div class="bg-white rounded-2xl border-2 border-gray-200 hover:border-vert transition-all duration-300 overflow-hidden hover:shadow-xl transform hover:-translate-y-2">
                  <!-- Image -->
                  <div class="bg-vert-light p-12 flex items-center justify-center h-64 relative">
                    <div class="lunettes-svg-container absolute inset-0 top-70 m-auto flex items-center justify-center p-4 group-hover:scale-110 transition-transform duration-500" style="max-height: 70%; width: auto;">
                      <!-- Le SVG sera injecté ici par JavaScript -->
                    </div>
                  </div>

                  <!-- Contenu -->
                  <div class="p-6">
                    <div class="flex items-start justify-between mb-3">
                      <h3 class="text-xl font-bold text-noir">{autreModele.nom}</h3>
                      <p class="text-xl font-bold text-vert">{autreModele.prix}€</p>
                    </div>

                    <p class="text-gris text-sm mb-4 line-clamp-2">{autreModele.description}</p>

                    <!-- Bouton -->
                    <button class="w-full bg-vert text-white rounded-full px-6 py-3 text-sm font-semibold hover:bg-[#4a7d5f] transition-all duration-300">
                      Voir le modèle
                    </button>
                  </div>
                </div>
              </a>
            ))}
          </div>
        </section>
      )}

    </main>
  </div>
</Layout>

<style>
  /* Limiter le texte à 2 lignes */
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // SVG complet des lunettes (même que dans le configurateur)
    const svgContent = `
      <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" viewBox="0 0 595.28 841.89" class="w-full h-auto">
        <defs>
          <style>
            .cls-1 { fill: #706f6f; mix-blend-mode: multiply; }
            .cls-2 { isolation: isolate; }
            .cls-3, .cls-4 { fill: #ffffff; }
            .cls-4 { stroke: #1d1d1b; stroke-miterlimit: 10; stroke-width: .5px; }
            .cls-5 { fill: none; opacity: .75; }
          </style>
        </defs>
        <g class="cls-2">
          <g id="branches">
            <path class="cls-4" d="M108.83,155.14s49.35-5.57,54.93-8.76,11.14-7.96,19.5-9.55,64.48-11.14,64.48-11.14c0,0,7.16-1.99,17.51,5.57s33.04,31.84,39.4,31.05c6.37-.8,9.55-9.55,7.56-13.53s-40.67-32.75-47.36-34.63c-9.53-2.68-21.89-2.39-37.02,0-15.12,2.39-116.22,23.34-116.22,23.34,0,0-13.13,6.12-2.79,17.66Z"/>
            <path class="cls-1" d="M308.24,150.76s-.31,6.15-3.98,5.57c-4.97-.78-35.82-33.83-46.17-32.24,0,0,8.53,2.71,18.46,11.64,6.51,5.86,34.42,37.85,31.69,15.03Z"/>
            <path class="cls-4" d="M374.79,179.65l90.54-29.78s22.13-5.63,25.35-4.02,17.71,30.58,17.71,33.8-2.42,14.01-5.63,14.89c-2.33.64-5.33.11-6.84-4.21-1.41-4.02-6.84-31.73-12.47-31.47s-50.7,15.95-50.7,15.95c0,0-13.28,6.44-18.91,11.27s-32.19,11.27-32.19,11.27c0,0-9.66-7.65-6.84-17.71Z"/>
            <path class="cls-1" d="M381.34,180.1s102.27-35.19,107.85-31.99c0,0-18.2,2.49-41.76,11.88s-66.09,22.03-66.09,22.03v-1.92Z"/>
            <path class="cls-1" d="M485.36,158.06s3.26,0,4.98,3.45,9.77,24.71,9.77,24.71c0,0,.77,4.98,5.17-2.68,0,0-3.07,9.56-5.36,6.79s-9.77-26.33-9.77-26.33c0,0-2.87-6.74-4.79-5.94Z"/>
          </g>
          <g id="monture">
            <path class="cls-4" d="M385.31,180.81c-.24-3.41-9.57-5.22-12.71-6.4-3.14-1.18-15.7,1.96-15.7,1.96-12.17-3.14-54.55-9.03-78.88-9.03s-32.57,11.38-35.32,10.99c-2.75-.39-17.27-.78-23.55-1.96-6.28-1.18-5.1-14.13-39.25-26.48-34.14-12.35-68.29-12.42-68.29-12.42-13.35,4.66-6.76,18.49-6.76,18.49l2.05,6.35c4.32,2.03,3.14,10.52,4.71,23.08s7.46,28.65,14.13,38.46c6.67,9.81,31.79,20.8,44.35,21.19s23.55-1.96,31.79-15.31c8.24-13.34,16.88-36.89,16.88-36.89l10.2,1.57s2.91.31,5.35,3.09,4.43,8.03,7.6,17.31c7.56,22.1,25.12,39.25,25.12,39.25,0,0,5.6,7.43,33.44,12.66,23.08,4.34,42.7-2.46,42.7-2.46,17.72-7.17,21.63-44.96,21.63-44.96,0,0,1.83-13.3,7.81-16.65,7.37-4.14,8.27-4.44,12.71-5.32,3.61-.71.24-13.13,0-16.54ZM190.5,231.32c-9.42,5.1-32.18,7.06-46.31-3.92-14.13-10.99-20.8-30.22-22.76-52.98s7.1-25.23,7.1-25.23c0,0,14.88-.67,34.11,4.03,19.23,4.71,40.42,18.05,40.82,26.69.39,8.63-3.53,46.31-12.95,51.41ZM344.73,255.65c-9.03,4.32-21.47,4.71-31.93,3.92-10.46-.78-37.54-1.57-47.35-31.4,0,0-2.75-14.13-5.1-17.27-2.35-3.14-9.42-14.48-9.42-18.43,0-8.23,7.15-12.97,7.15-12.97,0,0,8.16-5.1,18.75-5.1,10.6,0,64.75,2.75,72.21,12.95,7.46,10.2,7.06,21.98,8.24,31.4,1.18,9.42-3.53,32.57-12.56,36.89Z"/>
          </g>
          <g id="verres">
            <path class="cls-5" d="M116.32,162.87c-.88,6.05.4,37.41,11.44,55.31s37.04,21.35,41.37,21.31,18.51,1.02,24.47-9.27c4.97-8.59,13.17-43.48,9.12-53.05-6.26-14.82-40.4-24.02-40.4-24.02,0,0-26.85-5.46-33.82-4.46,0,0-9.97-.96-12.17,14.17Z"/>
            <path class="cls-5" d="M247.32,192.54s-1.09-9.55,19.57-16.69c11.76-4.06,60.46,3.23,60.46,3.23,0,0,19.09,4.06,21.71,8.28,2.62,4.22,9.46,17.24,8.29,37.97-1.14,20.21-7.31,26.8-12.61,30.31,0,0-7.1,4.93-21.34,5.93-26.65,1.88-37.01-1.14-46.19-7.73-29.88-21.46-29.88-61.3-29.88-61.3Z"/>
          </g>
        </g>
      </svg>
    `;
    
    // Fonction pour colorier un SVG
    function colorierSVG(container: HTMLElement, couleurs: { monture: string, branches: string, verres: string }) {
      const svgContainer = container.querySelector('.lunettes-svg-container');
      if (!svgContainer) return;
      
      svgContainer.innerHTML = svgContent;
      const svg = svgContainer.querySelector('svg');
      if (!svg) return;
      
      // Appliquer les couleurs des verres
      const verresGroup = svg.querySelector('#verres');
      if (verresGroup) {
        const verresPaths = verresGroup.querySelectorAll('path');
        verresPaths.forEach(path => {
          (path as SVGPathElement).style.fill = couleurs.verres;
          (path as SVGPathElement).style.opacity = '0.5';
        });
      }

      // Appliquer la couleur de la monture
      const montureGroup = svg.querySelector('#monture');
      if (montureGroup) {
        const monturePaths = montureGroup.querySelectorAll('path.cls-4');
        monturePaths.forEach(path => {
          (path as SVGPathElement).style.fill = couleurs.monture;
          (path as SVGPathElement).style.stroke = couleurs.monture;
        });
      }

      // Appliquer la couleur des branches
      const branchesGroup = svg.querySelector('#branches');
      if (branchesGroup) {
        const branchesPaths = branchesGroup.querySelectorAll('path.cls-4');
        branchesPaths.forEach(path => {
          (path as SVGPathElement).style.fill = couleurs.branches;
          (path as SVGPathElement).style.stroke = couleurs.branches;
        });
      }
    }
    
    // Colorier l'image principale
    const mainImageContainer = document.getElementById('main-image-container');
    if (mainImageContainer) {
      const couleurs = JSON.parse(mainImageContainer.getAttribute('data-modele-couleurs') || '{}');
      colorierSVG(mainImageContainer as HTMLElement, couleurs);
    }
    
    // Colorier les suggestions "Vous aimerez aussi"
    const suggestions = document.querySelectorAll('[data-modele-couleurs]');
    suggestions.forEach((suggestion) => {
      if (suggestion.id === 'main-image-container') return; // Déjà traité
      const couleurs = JSON.parse(suggestion.getAttribute('data-modele-couleurs') || '{}');
      colorierSVG(suggestion as HTMLElement, couleurs);
    });
  });
</script>
